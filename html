            }
        }

        @keyframes scorePulseUp {
            0% {
                transform: scale(1);
                color: white;
            }

            20% {
                transform: scale(1.4) scaleY(1);
                color: var(--correct-color);
            }

            30% {
                transform: scale(1.5) scaleY(0.8);
            }

            50% {
                transform: scale(1.3) scaleY(0.6);
            }

            90% {
                transform: scale(0.9) scaleY(1.1);
            }

            100% {
                transform: scale(1);
                color: white;
            }
        }

        @keyframes scorePulseDown {
            0% {
                transform: scale(1);
